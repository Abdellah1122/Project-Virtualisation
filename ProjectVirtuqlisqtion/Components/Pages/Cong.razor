@page "/Congratulations"
@inject CourseService CService
<style>


    .completion-card {
        background-color: var(--background-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        padding: 3rem 2rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--secondary-color);
        margin-bottom: 2rem;
    }

        .logo span {
            color: var(--primary-color);
        }

    .completion-icon {
        width: 64px;
        height: 64px;
        background-color: var(--primary-light);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

        .completion-icon svg {
            width: 32px;
            height: 32px;
            color: var(--primary-color);
        }

    .completion-title {
        margin-bottom: 1rem;
    }

    .completion-message {
        max-width: 400px;
        margin: 0 auto 2rem;
    }

    /* Certificate */
    .certificate {
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        padding: 2rem;
        margin: 2rem auto;
        background-color: var(--background-color);
        position: relative;
        max-width: 450px;
    }

        .certificate::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%237F56D9' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            border-radius: var(--border-radius);
            opacity: 0.5;
            z-index: 0;
        }

    .certificate-content {
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .certificate-logo {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--secondary-color);
        margin-bottom: 1rem;
    }

        .certificate-logo span {
            color: var(--primary-color);
        }

    .certificate-title {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: var(--secondary-color);
    }

    .certificate-subtitle {
        font-size: 0.875rem;
        color: var(--light-text);
        margin-bottom: 1.5rem;
    }

    .certificate-name {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .certificate-course {
        font-size: 1.125rem;
        margin-bottom: 1rem;
    }

    .certificate-date {
        font-size: 0.875rem;
        color: var(--light-text);
        margin-bottom: 1.5rem;
    }

    .certificate-seal {
        width: 48px;
        height: 48px;
        margin: 0 auto 1rem;
        background-color: var(--primary-light);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .certificate-seal svg {
            width: 24px;
            height: 24px;
            color: var(--primary-color);
        }

    .certificate-signature {
        font-family: 'Brush Script MT', cursive;
        font-size: 1.25rem;
        color: var(--secondary-color);
        margin-bottom: 0.5rem;
    }

    .certificate-instructor {
        font-size: 0.75rem;
        color: var(--light-text);
    }

    /* Actions */
    .actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: var(--border-radius);
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
        border: none;
        background-color: var(--primary-color);
        color: white;
    }

    .btn-outline {
        background-color: transparent;
        border: 1px solid var(--border-color);
        color: var(--text-color);
    }

    .share-options {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .share-option {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--light-background);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .share-option svg {
            width: 20px;
            height: 20px;
            color: var(--text-color);
        }

    .next-steps {
        padding: 2em;
        margin: 2rem;
        text-align: center;
    }

        .next-steps h2 {
            margin-bottom: 1rem;
        }

    .next-steps-list {
        list-style: none;
        margin-bottom: 2rem;
    }

        .next-steps-list li {
            margin-bottom: 0.5rem;
            color: var(--light-text);
        }

    .containerr {
        padding: 2em;
    }</style>

@if (course != null)
{
    <div class="containerr">
        <div class="completion-card">
            <div class="logo">
                <span>Edu</span>Sphere
            </div>

            <div class="completion-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
            </div>

            <h1 class="completion-title">Congratulations!</h1>
            <p class="completion-message">You've successfully completed : @course.Title</p>

            <div class="certificate">
                <div class="certificate-content">
                    <div class="certificate-logo"><span>Edu</span>Sphere</div>
                    <div class="certificate-title">Certificate of Completion</div>
                    <div class="certificate-subtitle">This certifies that</div>
                    <div class="certificate-course">@course.Title</div>
                    <div class="certificate-date">@DateTime.Now</div>
                    <div class="certificate-seal">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </div>
                    <div class="certificate-signature">@course.Instructor.Name</div>
                    <div class="certificate-instructor">Lead Instructor</div>
                </div>
            </div>

        </div>

        <div class="next-steps">
            <h2>What's Next?</h2>
            <ul class="next-steps-list">
                <li>Explore our Advanced Web Development course</li>
                <li>Join our community forum to connect with other developers</li>
                <li>Check out our project ideas to practice your skills</li>
            </ul>
            <a href="/Coursees" class="btn">Explore More Courses</a>
        </div>
    </div>

}

@code{
    Course course;
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("CourseQuiz: OnInitializedAsync started.");
        course = CService.GetCourse();
    }
}