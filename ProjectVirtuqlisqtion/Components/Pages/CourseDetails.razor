        gap: 1.5rem;
        color: var(--light-text);
        font-size: 0.875rem;
    }

    .curriculum-accordion {
        margin-bottom: 2rem;
    }

    .accordion-item {
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        margin-bottom: 1rem;
        overflow: hidden;
    }

    .accordion-header {
        background-color: var(--light-background);
        padding: 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

