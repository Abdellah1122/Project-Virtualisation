        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        color: var(--light-text);
        font-size: 0.875rem;
        padding: 1rem 0;
    }

        .breadcrumb a:hover {
            color: var(--primary-color);
        }

    /* Course Hero Section */
