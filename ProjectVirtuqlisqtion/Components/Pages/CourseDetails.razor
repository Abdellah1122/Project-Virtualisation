        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .instructor-avatar-lg {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .instructor-stats {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--light-text);
    }

        .stat-item svg {
            width: 16px;
            height: 16px;
            color: var(--primary-color);
        }

    .instructor-bio h4 {
        margin-bottom: 1rem;
    }
