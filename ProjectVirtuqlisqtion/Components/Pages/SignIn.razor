@page "/SignIn"
@inject StudentService StudentService
@inject NavigationManager NavigationManager
<style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary-color: #7F56D9;
        --primary-light: #F9F5FF;
        --primary-dark: #6941C6;
        --secondary-color: #101828;
        --text-color: #344054;
        --light-text: #667085;
        --border-color: #E4E7EC;
        --background-color: #FFFFFF;
        --light-background: #F9FAFB;
        --border-radius: 8px;
        --shadow-sm: 0 1px 3px rgba(16, 24, 40, 0.1);
    }

    body {
        font-family: 'Poppins', sans-serif;
        color: var(--text-color);
        line-height: 1.5;
        background-color: var(--light-background);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    a {
        text-decoration: none;
        color: var(--primary-color);
    }

    /* Typography */
    h1, h2, h3 {
        color: var(--secondary-color);
        font-weight: 600;
        line-height: 1.2;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 0.75rem;
    }

    p {
        margin-bottom: 1rem;
        color: var(--light-text);
    }

    h1 span {
        color: var(--primary-color);
    }

    /* Layout */
    .auth-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
        background-color: var(--background-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .auth-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .logo {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .logo span {
            color: var(--primary-color);
        }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Tabs */
    .auth-tabs {
        position: relative;
        margin-bottom: 2rem;
    }

        .auth-tabs input[type="radio"] {
            display: none;
        }

    .auth-tabs-labels {
        display: flex;
        border-bottom: 1px solid var(--border-color);
    }

    .auth-tab-label {
        flex: 1;
        text-align: center;
        padding: 1rem 0;
        font-weight: 500;
        color: var(--light-text);
        cursor: pointer;
        position: relative;
    }

    #login:checked ~ .auth-tabs-labels .login-label,
    #signup:checked ~ .auth-tabs-labels .signup-label {
        color: var(--primary-color);
    }

        #login:checked ~ .auth-tabs-labels .login-label::after,
        #signup:checked ~ .auth-tabs-labels .signup-label::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: var(--primary-color);
            border-radius: 2px 2px 0 0;
        }

    .auth-tab-content {
        display: none;
        padding-top: 1.5rem;
    }

    #login:checked ~ .login-content,
    #signup:checked ~ .signup-content {
        display: block;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        font-size: 0.875rem;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        font-family: inherit;
        font-size: 1rem;
        color: var(--text-color);
    }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px var(--primary-light);
        }

        .form-input::placeholder {
            color: var(--light-text);
        }

    .form-checkbox {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .form-checkbox input {
            width: 18px;
            height: 18px;
            accent-color: var(--primary-color);
        }

        .form-checkbox label {
            font-size: 0.875rem;
            color: var(--text-color);
        }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .forgot-password {
        font-size: 0.875rem;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: var(--border-radius);
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
        border: none;
        width: 100%;
        background-color: var(--primary-color);
        color: white;
    }

        .btn:hover {
            background-color: var(--primary-dark);
        }

    .auth-divider {
        display: flex;
        align-items: center;
        margin: 2rem 0;
        color: var(--light-text);
        font-size: 0.875rem;
    }

        .auth-divider::before,
        .auth-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background-color: var(--border-color);
        }

        .auth-divider::before {
            margin-right: 1rem;
        }

        .auth-divider::after {
            margin-left: 1rem;
        }

    .social-login {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .social-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem;
        border-radius: var(--border-radius);
        border: 1px solid var(--border-color);
        background-color: white;
        cursor: pointer;
    }

        .social-btn:hover {
            background-color: var(--light-background);
        }

        .social-btn svg {
            width: 24px;
            height: 24px;
        }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.875rem;
    }

</style>

<div class="auth-container">
    <div class="auth-logo">
        <div class="logo">
            <span>Edu</span>Sphere
        </div>
    </div>

    <div class="auth-header">
        <h1>Welcome to <span>EduSphere</span></h1>
        <p>Your journey to knowledge begins here</p>
    </div>

    <div class="auth-tabs">
        <input type="radio" id="login" name="auth-tab" checked>
        <input type="radio" id="signup" name="auth-tab">

        <div class="auth-tabs-labels">
            <label for="login" class="auth-tab-label login-label">Log In</label>
            <label for="signup" class="auth-tab-label signup-label">Sign Up</label>
        </div>

        <!-- Login Form -->
        <div class="auth-tab-content login-content">
            <div class="form-group">
                <label for="loginEmail" class="form-label">Email</label>
                <input type="email" id="loginEmail" class="form-input" placeholder="Enter your email" required
                       @bind="EmailLogin" />
            </div>

            <div class="form-group">
                <label for="loginPassword" class="form-label">Password</label>
                <input type="password" id="loginPassword" class="form-input" placeholder="Enter your password" required
                       @bind="PasswordLogin" />
            </div>
            <button class="btn" @onclick="LoginStudent">Log In</button>
        </div>

        <!-- Signup Form -->
        <div class="auth-tab-content signup-content">
            <div class="form-group">
                <label for="signupName" class="form-label">Full Name</label>
                <input type="text" id="signupName" class="form-input" placeholder="Enter your full name" required
                       @bind="NameSign" />
            </div>

            <div class="form-group">
                <label for="signupEmail" class="form-label">Email</label>
                <input type="email" id="signupEmail" class="form-input" placeholder="Enter your email" required
                       @bind="EmailSign" />
            </div>

            <div class="form-group">
                <label for="signupPassword" class="form-label">Password</label>
                <input type="password" id="signupPassword" class="form-input" placeholder="Create a password" required
                       @bind="PasswordSign" />
            </div>

            <div class="form-checkbox">
                <input type="checkbox" id="termsAgree" required />
                <label for="termsAgree">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
            </div>

            <button class="btn" @onclick="CreateAccount">Create Account</button>
        </div>
    </div>

    <div class="auth-footer">
        <p>By continuing, you agree to EduSphere's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</p>
    </div>
</div>

@code {
    private string EmailLogin = string.Empty;
    private string PasswordLogin = string.Empty;

    private string NameSign = string.Empty;
    private string EmailSign = string.Empty;
    private string PasswordSign = string.Empty;

    public async Task CreateAccount()
    {
        Student student = new Student
            {
                Name = NameSign,
                Email = EmailSign,
                Password = PasswordSign
            };
        await StudentService.CreateStudent(student);
    }

    public async Task LoginStudent()
    {
        bool isLoggedIn = await StudentService.Login(EmailLogin, PasswordLogin);

        if (isLoggedIn)
        {
            var student = await StudentService.GetAllAsync();
            var loggedStudent = student.FirstOrDefault(s => s.Email == EmailLogin);

            if (loggedStudent != null)
            {
                StudentService.SetStudent(loggedStudent);
                NavigationManager.NavigateTo("/"); 
            }
        }
        else
        {
            Console.WriteLine("Login failed: Invalid credentials");
        }
    }
}